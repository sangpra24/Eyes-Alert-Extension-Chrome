{
  "manifest_version": 3,
  "name": "แจ้งเตือนการพักสายตา",
  "version": "1.0",
  "description": "ส่วนขยายของ Chrome เพื่อเตือนให้คุณพักสายตา",
  "permissions": ["storage", "notifications", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }

}
